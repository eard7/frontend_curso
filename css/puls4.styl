azul = #22BCE0
gris_oscuro = #444
gris_texto = #7A7A7A
naranja = #DD4F24

@font-face {
	font-family: 'iconitos';
	src:url('../fonts/icomoon.eot');
	src:url('../fonts/icomoon.eot?#iefix') format('embedded-opentype'),
		url('../fonts/icomoon.ttf') format('truetype'),
		url('../fonts/icomoon.woff') format('woff'),
		url('../fonts/icomoon.svg#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

a
	color naranja
body
	background #E8E8E8
	color gris_oscuro
	font-family Arial
	font-size 16px

footer
	background naranja
	color rgba( white, 0.5 )
	padding 1em 0
	text-align center
	width 100%

	h3
		font-size 14px
		font-weight normal

		strong
			display block

		.mejor
			&:before
			&:after
				content " - "

header
	background gris_oscuro
	color white
	overflow hidden
	padding 0.5em
	position relative
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	z-index 55

	.logo
		border-right 1px solid azul
		width 60px
		float left
		img
			width 52px

	.titular
		margin 0 80px 0 70px

		.filtro
			color azul
			font-size 14px
			font-style italic
			font-weight bold
			text-decoration none

		.publicar
			background naranja
			color white
			font-style italic
			float right
			padding 0.2em 0.5em
			text-decoration none
			text-shadow 1px 1px 0px black

			&:before
				content "\e600"
				font-family "iconitos"
				text-shadow none
				display inline-block
				margin 0 3px 0 0
		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0

	.usuario
		position absolute
		top 10px
		right 10px
		.avatar
			margin 0 1em 0 0
			position relative
			z-index 1
			img
				width 50px
				border-radius 50%
		.flechita
			background naranja
			color white
			display block
			padding 2px
			text-align right
			text-decoration none
			width 50%
			position absolute
			top 15px
			right 0
			z-index 0
			&:after
				content "\e602"
				display black
				margin 1px 0 0 1px
				font-family "iconitos"
				text-shadow 1px 1px 0 black

nav
	background azul
	border-left 15px solid white
	position relative
	&:before
		border-bottom 20px solid transparent
		border-top 20px solid transparent
		border-left 7px solid white
		content ""
		position absolute
		left 0
		top 0
	.menu
		height 40px
		line-height 40px
		margin 0
		padding 0
		overflow-x auto
		white-space nowrap
		&::-webkit-scrollbar
			display none
		li
			display inline-block
			a
				color white
				text-decoration none
				display block
				padding 0 0.2em
				margin 0 0.5em
				&:before
					content: "- "
				&:after
					content: " -"

				&:hover
					background rgba(black, 0.1)

.posts
	padding 0.5em
	.post
		background white
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black, 0.5)
		color gris_texto
		margin-bottom 0.5em

	.acciones
		border-top 3px solid azul
		padding 0.5em
		overflow hidden

		.datos
			float right

			.comentarios
				background gris_oscuro
				border-radius 3px
				color white
				margin 0 1em 0 0
				padding 2px 5px
				text-decoration none

			.estrellita
				text-decoration none
				&:after
					color #FCB92D
					font-family "iconitos"
					content "\e601"
					font-size 1.1em

		.votos
			float left

			.down
			.up
				text-decoration none
				&:before
					font-family "iconitos"
					font-size 1.5em
					vertical-align middle

			.down
				color red
				&:before
					content "\e602"
			.up
				color green
				&:before
					content "\e603"

	.descripcion

		.detalles
			height 160px
			margin-left 130px

			.titulo
				color gris_oscuro
				font-size 18px
				font-style italic
				margin 0
				padding 0.5em 0.5em 0 0

			.autor
				margin 0.5em 0 2em 0

			.fecha
				float right
				margin 0 1em 0 0

			.tag
				background azul
				border-radius 0.5em
				padding 0.2em 0.5em
				color white
				text-decoration none
		.imagen
			float left
			img
				vertical-align top
				height 160px
				width 120px

@media screen and ( min-width: 768px )

	header
		.titular
			.publicar
				font-size 1.1em
				padding-left 3em
				position relative
				&:before
					left 0
					top -10px
					font-size 2.5em
					position absolute

	.posts
		.post
			display inline-block
			width 48%
			vertical-align top
			&:nth-child(odd)
				margin-right 2%